{% extends 'base.html.twig' %}

{% block title %}Alumno{% endblock %}

{% block body %}
    <h1>Alumno</h1>

    <table class="table table-primary table-striped-columns">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alumno.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ alumno.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ alumno.apellido }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ alumno.edad }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ alumno.dni }}</td>
            </tr>
        </tbody>
    </table>

    <div class="p-2 g-col-6">
        <a class="btn btn-info" role="button" href="{{ path('app_alumno_edit', {'id': alumno.id}) }}">Editar</a>
    </div>

    <div class="p-2 g-col-8">
    {{ include('alumno/_delete_form.html.twig') }}
    </div>

    <div class="p-2 g-col-6">
        <a class="btn btn-success" role="button" href="{{ path('app_alumno_index') }}">Volver a la lista</a>
    </div>

    
{% endblock %}
